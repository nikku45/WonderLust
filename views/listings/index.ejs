<% layout("layouts/boilerplate") %>
<body>
    <!-- <form method="Get" action="/listings/new">
        <button type="submit">Create new Listing</button>
    </form> -->
    
    <h1>
       All Listings
    </h1>
    <div class="row row-cols-lg-3 row-col-md-3 row-cols-sm-1">
    <% for(listing of alllistings) {%>
        <a href="/listings/<%=listing.id%>" class="listing-link" >
            <div class="card col listing-card">
                <img class="card-img-top" src="<%=listing.image.url%>" alt="Card image cap" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b><%=listing.title%> </b> <br>
                   <%= Number(listing.price).toLocaleString("en-IN") %>

                </p>
                </div>
              </div>
        </a>
      <% } %>
    </div>
    
          
               
            
    
  

    
    
</body>
